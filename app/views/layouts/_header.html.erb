<header class="navbar navbar-fixed-top navbar-inverse clearfix">
    <div class="container">
      <nav>
        <a class="navbar-brand" href="/">
          <%= link_to "51yue", root_path, id: "logo" %>
        </a>

        <ul class="nav navbar-nav navbar-left">

          <li><%= link_to t("navbar.about"), about_path %></li>

          <li><%= link_to t("navbar.help"), help_path %></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
          <li><%= link_to current_user.name, current_user %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
          <% else %>
          <li><%= link_to t("navbar.login"), login_path %></li>
          <li><%= link_to t("navbar.signup"), signup_path %></li>
          <% end %>
        </ul>
      </nav>
  </div>
</header>
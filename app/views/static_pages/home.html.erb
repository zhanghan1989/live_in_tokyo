<header class="navbar navbar-fixed-top navbar-inverse clearfix navbar-transparent">
  <div class="splash" style="background-position: 0px 0px;">
    <div class="container">
      <nav>
        <a class="navbar-brand" href="/">
          <%= link_to "51yue", root_path, id: "logo" %>
        </a>

        <ul class="nav navbar-nav navbar-left">

          <li><%= link_to t("navbar.about"), about_path %></li>

          <li><%= link_to t("navbar.help"), help_path %></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li><%= link_to current_user.name, current_user %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
          <% else %>
          <li><%= link_to t("navbar.login"), login_path %></li>
          <li><%= link_to t("navbar.signup"), signup_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>


<% flash.each do |key, value| %>
<div class="alert-<%= key %>"><%= value %></div>
<% end %>





<div class="home-banner" data-stretch="<%= image_url "home-banner-bg.jpg" %>">
  <div class="center hero-unit">
    <h1><%= t("home.slogan") %></h1>

    <% if logged_in? %>

    <% else %>
    <%= link_to t("home.signup"), signup_path, class: "btn btn-large btn-primary" %>
    <% end %>
  </div>


  <div class="banner-inner container clearfix">
  </div>


</div>
<div class="issue-list-header">
  <div class="container clearfix">
    <div class="issue-list-heading"><%= t("home.issues") %></div>
    <div class="home-banner-links">
      <%= link_to t("home.contribute"), "/issues/new", class: "banner-btn btn" %>
    </div>
  </div>
</div>

<div class="container clearfix">  
  <%= render partial: 'issue_list', locals: { issues: @issues } %>
</div>

<script>
  $('.home-banner').anystretch();
</script>

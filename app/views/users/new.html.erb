<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
    <!--<%= render 'shared/error_messages' %>-->

    <dl class="form">
        <dt><%= f.label :name %></dt>
        <dd><%= f.text_field :name, class: 'form-control' %></dd>
        <% if @user.errors[:name].any? %>
        <dd class="error"><%= @user.errors[:name][0] %></dd>
        <% end %>
    </dl>

    <dl class="form">
        <dt><%= f.label :email %></dt>
        <dd><%= f.text_field :email, class: 'form-control' %></dd>
        <% if @user.errors[:email].any? %>
        <dd class="error"><%= @user.errors[:email][0] %></dd>
        <% end %>
    </dl>


    <dl class="form">
        <dt><%= f.label :password %></dt>
        <dd><%= f.password_field :password, class: 'form-control' %></dd>
        <% if @user.errors[:password].any? %>
        <dd class="error"><%= @user.errors[:password][0] %></dd>
        <% end %>
    </dl>

    <dl class="form">
        <dt><%= f.label :password_confirmation, "Confirmation" %></dt>
        <dd><%= f.password_field :password_confirmation, class: 'form-control' %></dd>
        <% if @user.errors[:password_confirmation].any? %>
        <dd class="error"><%= @user.errors[:password_confirmation][0] %></dd>
        <% end %>
    </dl>

    <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
</div>
</div>